@{
    ViewBag.Title = "Factura";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Factura</title>
</head>

<body>
    <h3 class="text-center text-white pt-5">Factura form</h3>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center text-info">Factura</h3>
            </div>
            <div class="card-body">
                <div class="row justify-content-center align-items-center">
                    <div class="col-md-6">
                        <div class="col-md-12">
                            <div>
                                <label class="text-info">Codigo</label><br>
                                <input class="form-control form-control-sm" type="text" id="txtCodigo" onkeydown="detectarTab(event)" name="Codigo">
                            </div>
                            <div>
                                <label class="text-info">Nombre</label><br>
                                <input type="text" id="txtNombreArticulo" name="Articulo" class="form-control" disabled>
                            </div>
                            <div>
                                <label class="text-info">Cantidad</label><br>
                                <input type="text" id="txtCantidad" name="Cantidad" class="form-control">
                            </div><br>

                            <div>
                                <button id="btnAgregarFactura" class="float-right btn btn-info btn-md">Agregar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered table-sm" id="tbFactura">
                        <thead>
                            <tr class="table-info">
                                <th>Codigo</th>
                                <th>Nombre</th>
                                <th>Precio</th>
                                <th>IVA</th>
                                <th>Cantidad</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
            <div>
                <button id="btnImprimirFactura" class="float-right btn btn-info btn-md" disabled>Imprimir</button>
            </div>
        </div>
    </div>
    <div id="sesion-data" data-UserId="@Session["UserId"]"></div>
</body>
</html>
